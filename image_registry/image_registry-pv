apiVersion: v1
kind: PersistentVolume
metadata:
  name: image-registry-pv
spec:
  capacity:
    storage: 20Gi
  accessModes:
    - ReadWriteMany
  persistentVolumeReclaimPolicy: Retain
  storageClassName: registry-storage   # Ensures PVC can bind to this PV
  nfs:
    path: /var/nfs/NFS/registry
    server: 10.0.0.100
